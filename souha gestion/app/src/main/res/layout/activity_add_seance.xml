<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Seance.admin.AddSeanceActivity">


        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouter Seance"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView"
            android:id="@+id/img"
            android:src="@drawable/baseline_seat_available"
            >

        </ImageView>

        <EditText android:id="@+id/editTextNumeroSeance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numero Seance"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img"

            />

        <EditText android:id="@+id/editTextNomMatiere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Matiere"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumeroSeance"

            />



        <EditText android:id="@+id/editTextDateSeance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="date"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextNomMatiere"
            android:inputType="none"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />

        <EditText android:id="@+id/editTextHeureSeance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="heure"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextDateSeance"
            android:inputType="none"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />



        <Button android:id="@+id/buttonAddSeance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Continuer"
            android:textColor="@color/material_dynamic_tertiary0"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/editTextHeureSeance"


            />
    </androidx.constraintlayout.widget.ConstraintLayout>
